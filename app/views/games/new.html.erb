<h1>New Game</h1>

<div class="d-flex my-3 justify-content-between">
  <% @letters.each do |letter| %>
  <div class="letter m-1 bg-primary text-white">
    <h2>
      <%= letter %>
    </h2>
  </div>
  <% end %>
</div>

<form action="/score" method="post" class="input-group">
  <input type="text" class="form-control py-4" name="word" placeholder="Enter the longest word you can think of!">
  <input type="submit" class="input-group-append btn btn-primary sharpened-left" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
